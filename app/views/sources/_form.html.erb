<%= form_with(model: source, class: "contents") do |form| %>
  <% if source.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(source.errors.count, "erreur") %> empêche(nt) cette source d'être enregistrée !</h2>

      <ul>
        <% source.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :gare %>
    <%= form.text_field :gare, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5 form-control">
    <%= form.label :sens %>
    <%= form.select :sens, options_for_select(['Départ', 'Arrivée'], source.sens), {}, {class: "block select select-bordered w-full max-w-xs"} %>
  </div>

  <div class="my-5">
    <%= form.label :url, 'URL' %>
    <%= form.text_field :url, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit "Enregistrer", class: "btn rounded-md py-3 px-5" %>
  </div>
<% end %>
