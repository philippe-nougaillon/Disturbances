<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @sources_user %>

    <%= link_to 'Edit this sources_user', edit_sources_user_path(@sources_user), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this sources_user', sources_user_path(@sources_user), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to sources_users', sources_users_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
