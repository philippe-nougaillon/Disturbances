<tr class="hover">
  <div id="<%= dom_id disturbance %>">
    <th class="font-normal">
      <p>
        <%= disturbance.id %>
      </p>
    </th>

    <td>
      <p>
        <%= disturbance.origine %>
      </p>
    </td>

    <td>
      <p>
        <%= disturbance.train %>
      </p>
    </td>

      <% if disturbance.sens == 'Départ' %>
        <td>
          <p>
            ->
            <%= disturbance.destination %>
          </p>
        </td>

        <td>
          <p>
            <%= disturbance.départ_prévu %>
          </p>
        </td>

        <td>
          <p>
            <%= disturbance.départ_réel %>
          </p>
        </td>
      <% else %>
        <td>
          <p>
            <-
            <%= disturbance.provenance %>
          </p>
        </td>

        <td>
          <p>
            <%= disturbance.arrivée_prévue %>
          </p>
        </td>

        <td>
          <p>
            <%= disturbance.arrivée_réelle %>
          </p>
        </td>
      <% end %>

      <td>
        <p>
          <%= disturbance.voie %>
        </p>
      </td>

      <td>
        <p>
          <span style="<%= disturbance.perturbation_style%>">
            <%= disturbance.perturbation %>
          </span>
        </p>
      </td>

      <td>
        <p>
          <%= disturbance.information %>
        </p>
      </td>

      <td>
        <p>
          <%= time_tag disturbance.created_at, "data-local": "time-ago" %>
        </p>
      </td>

      <td>
        <% if policy(disturbance).show? %>
          <%= link_to 'Voir', disturbance_path(disturbance), class: "btn btn-ghost btn-xs" %>
        <% end %>
      </td>
    </td>
  </div>
</tr>